<header class="sticky top-0 z-40 bg-gray-950/95 backdrop-blur-sm border-b border-gray-800">
  <nav class="container mx-auto px-4 max-w-7xl">
    <div class="flex items-center justify-between h-16">

      <!-- Logo -->
      <div class="flex-shrink-0">
        <%- include('logo') %>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-6">
        <a href="/" class="text-sm font-medium transition-colors <%= currentPath === '/' ? 'text-white' : 'text-gray-400 hover:text-gray-200' %>">
          News Feed
        </a>
        <a href="/about" class="text-sm font-medium transition-colors <%= currentPath === '/about' ? 'text-white' : 'text-gray-400 hover:text-gray-200' %>">
          About
        </a>
      </div>

      <!-- Auth buttons (desktop) -->
      <div class="hidden md:flex items-center gap-3">
        <% if (user) { %>
          <a href="/profile" class="text-sm font-medium text-gray-400 hover:text-gray-200 transition-colors flex items-center gap-1.5">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <%= user.display_name || user.email.split('@')[0] %>
          </a>
          <form method="POST" action="/logout" class="inline">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
            <button type="submit" class="text-sm font-medium text-gray-500 hover:text-gray-300 transition-colors">
              Sign Out
            </button>
          </form>
        <% } else { %>
          <a href="/login" class="text-sm font-medium text-gray-400 hover:text-gray-200 transition-colors">
            Sign In
          </a>
          <a href="/register" class="btn-primary text-sm py-2 px-4">
            Get Started
          </a>
        <% } %>
      </div>

      <!-- Mobile hamburger -->
      <button id="mobileMenuBtn" class="md:hidden p-2 text-gray-400 hover:text-gray-200 transition-colors rounded-lg hover:bg-gray-800" aria-label="Toggle menu" aria-expanded="false">
        <svg id="menuIconOpen" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <svg id="menuIconClose" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <div id="mobileMenu" class="md:hidden hidden pb-4 border-t border-gray-800 pt-3 space-y-1">
      <a href="/" class="block px-3 py-2 rounded-lg text-sm font-medium <%= currentPath === '/' ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white' %> transition-colors">
        News Feed
      </a>
      <a href="/about" class="block px-3 py-2 rounded-lg text-sm font-medium <%= currentPath === '/about' ? 'bg-gray-800 text-white' : 'text-gray-400 hover:bg-gray-800 hover:text-white' %> transition-colors">
        About
      </a>
      <% if (user) { %>
        <a href="/profile" class="block px-3 py-2 rounded-lg text-sm font-medium text-gray-400 hover:bg-gray-800 hover:text-white transition-colors">
          Profile Settings
        </a>
        <form method="POST" action="/logout">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
          <button type="submit" class="w-full text-left px-3 py-2 rounded-lg text-sm font-medium text-gray-400 hover:bg-gray-800 hover:text-white transition-colors">
            Sign Out
          </button>
        </form>
      <% } else { %>
        <a href="/login" class="block px-3 py-2 rounded-lg text-sm font-medium text-gray-400 hover:bg-gray-800 hover:text-white transition-colors">
          Sign In
        </a>
        <a href="/register" class="block px-3 py-2 rounded-lg text-sm font-medium text-indigo-400 hover:bg-gray-800 transition-colors">
          Get Started
        </a>
      <% } %>
    </div>
  </nav>
</header>
