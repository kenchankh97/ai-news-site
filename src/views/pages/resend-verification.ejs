<div class="auth-container">
  <div class="auth-card space-y-8">
    <!-- Logo -->
    <div class="text-center">
      <div class="flex justify-center mb-6">
        <%- include('../partials/logo') %>
      </div>
      <h1 class="text-2xl font-bold text-white">Verify your email</h1>
      <p class="text-gray-500 mt-1 text-sm">Your account is waiting for email verification</p>
    </div>

    <!-- Flash messages -->
    <%- include('../partials/flashMessages') %>

    <!-- Info box -->
    <div class="rounded-lg border border-indigo-800 bg-indigo-950/50 p-4 text-sm text-indigo-300 leading-relaxed">
      <% if (prefillEmail) { %>
        A verification email was sent to <strong class="text-indigo-200"><%= prefillEmail %></strong> when you registered.
        If it expired or you didn't receive it, click below to send a new one.
      <% } else { %>
        Enter your email address and we'll send a fresh verification link if your account is pending verification.
      <% } %>
    </div>

    <!-- Resend form -->
    <div class="card">
      <form method="POST" action="/resend-verification" class="space-y-5" novalidate>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>

        <div>
          <label for="email" class="input-label">Email address</label>
          <input
            type="email" id="email" name="email" autocomplete="email"
            required placeholder="you@example.com"
            value="<%= prefillEmail %>"
            class="input-field"
          />
        </div>

        <button type="submit" class="btn-primary w-full">
          Resend Verification Email
        </button>
      </form>
    </div>

    <div class="flex flex-col gap-2 text-center text-sm text-gray-500">
      <span>
        Already verified?
        <a href="/login" class="text-indigo-400 hover:text-indigo-300 transition-colors font-medium">Sign in</a>
      </span>
      <span>
        Wrong email?
        <a href="/register" class="text-indigo-400 hover:text-indigo-300 transition-colors font-medium">Register again</a>
      </span>
    </div>
  </div>
</div>
