<div class="auth-container">
  <div class="auth-card space-y-8">
    <!-- Logo -->
    <div class="text-center">
      <div class="flex justify-center mb-6">
        <%- include('../partials/logo') %>
      </div>
      <h1 class="text-2xl font-bold text-white">Create your account</h1>
      <p class="text-gray-500 mt-1 text-sm">Free access to twice-daily AI news digests</p>
    </div>

    <!-- Flash messages -->
    <%- include('../partials/flashMessages') %>

    <!-- Register form -->
    <div class="card">
      <form method="POST" action="/register" class="space-y-5" novalidate>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>

        <div>
          <label for="display_name" class="input-label">Display Name</label>
          <input
            type="text" id="display_name" name="display_name"
            required minlength="2" maxlength="100"
            placeholder="Your name"
            class="input-field"
          />
        </div>

        <div>
          <label for="email" class="input-label">Email address</label>
          <input
            type="email" id="email" name="email" autocomplete="email"
            required placeholder="you@example.com"
            class="input-field"
          />
          <p class="text-xs text-gray-600 mt-1.5">We'll send a verification link to this address.</p>
        </div>

        <button type="submit" class="btn-primary w-full">
          Create Account
        </button>
      </form>
    </div>

