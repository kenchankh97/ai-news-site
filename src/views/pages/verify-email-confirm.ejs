<div class="auth-container">
  <div class="auth-card space-y-8">
    <!-- Logo -->
    <div class="text-center">
      <div class="flex justify-center mb-6">
        <%- include('../partials/logo') %>
      </div>
      <!-- Email icon -->
      <div class="w-16 h-16 mx-auto bg-indigo-900/40 border border-indigo-700 rounded-full flex items-center justify-center mb-4">
        <svg class="w-8 h-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-white">Confirm your email</h1>
      <p class="text-gray-500 mt-1 text-sm">Click the button below to verify your address and continue</p>
    </div>

    <%- include('../partials/flashMessages') %>

    <div class="card">
      <form method="POST" action="/verify-email" class="space-y-5" novalidate>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
        <input type="hidden" name="token" value="<%= token %>"/>
        <input type="hidden" name="uid" value="<%= uid %>"/>

        <p class="text-sm text-gray-400 text-center leading-relaxed">
          You're one step away! Click the button below to verify your email address and proceed to set your password.
        </p>

        <button type="submit" class="btn-primary w-full">
          Confirm Email Address
        </button>
      </form>
    </div>

    <p class="text-center text-sm text-gray-500">
      Wrong email or link expired?
      <a href="/resend-verification" class="text-indigo-400 hover:text-indigo-300 transition-colors font-medium">Request a new link</a>
    </p>
  </div>
</div>
