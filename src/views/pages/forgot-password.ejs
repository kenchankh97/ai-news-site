<div class="auth-container">
  <div class="auth-card space-y-8">
    <div class="text-center">
      <div class="flex justify-center mb-6">
        <%- include('../partials/logo') %>
      </div>
      <h1 class="text-2xl font-bold text-white">Forgot your password?</h1>
      <p class="text-gray-500 mt-1 text-sm">Enter your email and we'll send a reset link</p>
    </div>

    <%- include('../partials/flashMessages') %>

    <div class="card">
      <form method="POST" action="/forgot-password" class="space-y-5" novalidate>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>

        <div>
          <label for="email" class="input-label">Email address</label>
          <input
            type="email" id="email" name="email" autocomplete="email"
            required placeholder="you@example.com"
            class="input-field"
          />
        </div>

        <button type="submit" class="btn-primary w-full">
          Send Reset Link
        </button>
      </form>
    </div>

    <p class="text-center text-sm text-gray-500">
      Remembered it?
      <a href="/login" class="text-indigo-400 hover:text-indigo-300 transition-colors font-medium">Back to sign in</a>
    </p>
  </div>
</div>
